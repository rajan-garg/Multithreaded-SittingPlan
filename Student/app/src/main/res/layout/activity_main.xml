<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajan.seatingplan.controller.MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="568dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:layout_marginLeft="31dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Implementation"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:id="@+id/implementation"
                    android:textSize="18dp"
                    android:text="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="568dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp">
                <TextView
                    android:layout_marginLeft="31dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Server Address"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:id="@+id/ip"
                    android:textSize="18dp"
                    android:text="192.168.0.101"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/ROLL"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="1"
                    android:hint="Enter roll number"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"/>

                <EditText
                    android:id="@+id/SEAT"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Enter seat number"
                    android:text="3"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/showbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show seats"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1"
                    android:visibility="invisible"
                    android:layout_marginEnd="62dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginBottom="73dp"
                    android:layout_marginRight="62dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
